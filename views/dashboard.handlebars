<div class="dashboard-page">
  <div>
    <h2>Your Dashboard</h2>
  </div>
  
  <div class="new-post-form" style="display: none" id="new-post-form">
    <h3>Create New Post</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <div>
          <label for="byLocation">Location</label>
          <input type="text" id="byLocation" name="byLocation">
        </div>
        <div>
          <div class="pet">
            <input type="checkbox" id="petFriendly" name="petFriendly">
            <label for="petFriendly">🐕‍🦺</label><br>
          </div>
          <div class="family">
            <input type="checkbox" id="familyFriendly" name="familyFriendly">
            <label for="familyFriendly">👶</label><br>
          </div>
          <div class="image">
            <label for="image">Image URL</label>
            <input type="text" id="image" name="image">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="post-list">
    {{#each posts as |post|}}
    <div>
      <div>
        <h4><a href="/post/{{post.id}}">{{post.title}} {{format_date post.date_created}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<div class="new-post">
  <button class="btn btn-primary create-button">New Post</button>
</div>


<script src="/js/dashboard.js"></script>