<!-- Add comments to existing post -->
<div class="text-left">
  <h2>{{title}} Posted By {{users.username}} on {{format_date date_created}}</h2>
  <h2>{{content}}</h2>
</div>
<div class="row">
  <div class="col-md-12">
    <form class="form existing-post-form">
      <div class="form-group">
        <label for="post-comment">Comment</label>
        <textarea class="form-input" id="post-comment" name="post-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>