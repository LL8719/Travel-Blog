<!-- Add comments to existing post -->
<div class="text-left">
  <h2>{{title}}</h2>
    <h3>Posted By {{user.username}} on {{format_date date_created}}</h3>
  <p>{{content}}</p>
</div>
  <div class="col-md-12 post-list">
    <form class="form existing-post-form" data-id="{{id}}">
      <div class="form-group">
        <label for="post-comment">Comment</label>
        <textarea class="form-input" id="post-comment" name="post-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary form-save" data-id="{{id}}">Submit</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  {{#if comments.length}}
  <div class="col-md-12">
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-12">
        <h4>{{comment.user.username}} {{format_date comment.date_created}}</h4>
            <p>{{comment_text}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


  <script src="/js/allposts.js"></script>